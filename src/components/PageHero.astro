---
interface Props {
  titleEn: string;
  subtitle: string;
  image: string;
  imageAlt?: string;
}

const { titleEn, subtitle, image, imageAlt = titleEn } = Astro.props;
---

<section class="page-hero">
  <div class="hero-bg">
    <img src={image} alt={imageAlt} />
  </div>
  <div class="hero-content">
    <div class="container">
      <h1>{titleEn}</h1>
      <p>{subtitle}</p>
    </div>
  </div>
</section>

<style>
  .page-hero {
    position: relative;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  .hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-content {
    text-align: center;
    color: white;
    z-index: 1;
  }

  .hero-content h1 {
    font-family: 'Libertinus Serif Display', serif;
    font-size: 3.2rem;
    font-weight: 400;
    letter-spacing: 0.02em;
    margin-bottom: 10px;
    text-transform: none;
    font-style: normal;
    text-shadow: 0 2px 8px rgba(0,0,0,0.3);
  }

  .hero-content p {
    font-size: 1.2rem;
    opacity: 0.9;
    text-shadow: 0 1px 4px rgba(0,0,0,0.3);
  }

  @media (max-width: 768px) {
    .page-hero {
      height: 200px;
    }

    .hero-content h1 {
      font-size: 2.2rem;
      letter-spacing: 0.01em;
    }
  }
</style>
