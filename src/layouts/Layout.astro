---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
	lang?: 'ja' | 'en';
}

const { title, description = '塩田・貴家研究室 - 東京都立大学 システムデザイン学部', lang = 'ja' } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<base href={import.meta.env.BASE_URL} />
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" href="favicon.webp" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;400;500;700&family=Libertinus+Serif+Display:opsz,wght@45..45,400&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>塩田・貴家研究室 | {title}</title>
	</head>
	<body>
		<Header lang={lang} />
		<main>
			<slot />
		</main>
		<Footer lang={lang} />
	</body>
</html>
